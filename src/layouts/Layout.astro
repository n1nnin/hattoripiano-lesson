---
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = '服部ピアノ教室 | 磐田市のピアノ・声楽教室',
  description = '静岡県磐田市で約40年。一人ひとりに寄り添うピアノ・声楽教室。5歳から70代まで、初心者から経験者まで丁寧にレッスンいたします。',
} = Astro.props;
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="ja_JP" />
    <meta property="og:image" content="https://hattoripiano-lesson.com/images/hero.jpg" />
    <meta property="og:url" content="https://hattoripiano-lesson.com/" />
    <meta property="og:site_name" content="服部ピアノ教室" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="https://hattoripiano-lesson.com/images/hero.jpg" />
    <link rel="canonical" href="https://hattoripiano-lesson.com/" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preload" as="image" href="/images/hero.jpg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Caveat:wght@400;700&family=Noto+Sans+JP:wght@300;400;500;700&family=Zen+Maru+Gothic:wght@400;500;700&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "MusicSchool",
      "name": "服部ピアノ教室",
      "description": "静岡県磐田市で約40年。一人ひとりに寄り添うピアノ・声楽教室。",
      "url": "https://hattoripiano-lesson.com/",
      "telephone": "090-6582-1087",
      "email": "hiyorimaru0627@gmail.com",
      "address": {
        "@type": "PostalAddress",
        "streetAddress": "水掘160",
        "addressLocality": "磐田市",
        "addressRegion": "静岡県",
        "postalCode": "438-0085",
        "addressCountry": "JP"
      },
      "openingHoursSpecification": [
        {"@type": "OpeningHoursSpecification", "dayOfWeek": "Monday", "opens": "09:30", "closes": "19:00"},
        {"@type": "OpeningHoursSpecification", "dayOfWeek": "Tuesday", "opens": "13:00", "closes": "19:00"},
        {"@type": "OpeningHoursSpecification", "dayOfWeek": "Wednesday", "opens": "09:30", "closes": "19:00"},
        {"@type": "OpeningHoursSpecification", "dayOfWeek": "Saturday", "opens": "09:00", "closes": "19:00"}
      ],
      "sameAs": [
        "https://www.facebook.com/yumikohattoripiano",
        "https://www.instagram.com/hattoripiano",
        "https://youtube.com/channel/UC0JxaXyMp81bPFjLnqqTUMA"
      ]
    })} />
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "FAQPage",
      "mainEntity": [
        {"@type": "Question", "name": "楽器は必要ですか？", "acceptedAnswer": {"@type": "Answer", "text": "歌のレッスンの場合は必要ありません。ピアノの場合は自宅での練習のために必要ですが、事情がある場合は教室でのレッスンのみでも大丈夫です。"}},
        {"@type": "Question", "name": "レンタル楽器はありますか？", "acceptedAnswer": {"@type": "Answer", "text": "折りたたみキーボードを1〜2ヶ月お貸しすることが可能です。"}},
        {"@type": "Question", "name": "体験レッスンに下の子を連れていっても大丈夫ですか？", "acceptedAnswer": {"@type": "Answer", "text": "大丈夫です。お人形やぬいぐるみ、絵本などで遊べるスペースがあります。"}},
        {"@type": "Question", "name": "振替レッスンはできますか？", "acceptedAnswer": {"@type": "Answer", "text": "学校行事等で早めにご連絡いただければ、空き時間で対応いたします。体調不良の際はLINEでの動画レッスンも可能です。"}},
        {"@type": "Question", "name": "発表会はありますか？", "acceptedAnswer": {"@type": "Answer", "text": "年1回、12月にワークピア磐田ホールで開催しています。ソロとアンサンブルの2本立てです。"}},
        {"@type": "Question", "name": "体験レッスンの申し込み方法は？", "acceptedAnswer": {"@type": "Answer", "text": "LINE公式アカウントからスタンプやコメントでお気軽にご連絡ください。"}}
      ]
    })} />
  </head>
  <body class="bg-cream text-brown">
    <a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-[100] focus:bg-white focus:text-brown focus:px-4 focus:py-2 focus:rounded focus:shadow-lg">
      メインコンテンツへスキップ
    </a>
    <div id="main-content">
      <slot />
    </div>
    <script>
      const observer = new IntersectionObserver(
        (entries) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting) {
              entry.target.classList.add('is-visible');
              observer.unobserve(entry.target);
            }
          });
        },
        { threshold: 0.1 }
      );

      document.querySelectorAll('.observe-fade').forEach((el) => {
        observer.observe(el);
      });
    </script>
  </body>
</html>
